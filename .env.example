# Database Configuration
# MySQL/TiDB connection string - REQUIRED
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://user:password@localhost:3306/streamsync

# Server Configuration
# Port for the development server (default: 3000)
PORT=3000

# Environment mode (development, production)
NODE_ENV=development

# Authentication & Security
# Secret key for JWT token signing - REQUIRED for authentication
# Generate a secure random string (e.g., openssl rand -base64 32)
JWT_SECRET=your-secret-key-here

# OAuth Server Configuration
# URL for external OAuth authentication (optional)
# Leave empty to use built-in auth
OAUTH_SERVER_URL=

# Application Configuration
# Unique identifier for this application instance
VITE_APP_ID=streamsync-app

# Admin Configuration
# OpenID of the owner/admin user (optional)
# Used for admin-only features like notifications
OWNER_OPEN_ID=

# Forge API Configuration (optional)
# Built-in Forge API for advanced features
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=
